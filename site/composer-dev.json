{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "ssh://git@git.fabricadesoftware.ifc.edu.br:1022/portal-ifc-2017/tema.git"
    },
    {
      "type": "vcs",
      "url": "ssh://git@git.fabricadesoftware.ifc.edu.br:1022/portal-ifc-2017/tema-noticias.git"
    },
    {
      "type": "vcs",
      "url": "ssh://git@git.fabricadesoftware.ifc.edu.br:1022/portal-ifc-2017/tema-campi.git"
    },
    {
      "type": "vcs",
      "url": "ssh://git@git.fabricadesoftware.ifc.edu.br:1022/portal-ifc-2017/tema-cursos.git"
    },
    {
      "type": "vcs",
      "url": "ssh://git@git.fabricadesoftware.ifc.edu.br:1022/portal-ifc-2017/tema-departamentos.git"
    },
    {
      "type": "vcs",
      "url": "ssh://git@git.fabricadesoftware.ifc.edu.br:1022/portal-ifc-2017/ifc-funcionalidade.git"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.9.5",
    "oscarotero/env": "^1.1.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "stuttter/wp-multi-network": "dev-master",
    "wpackagist-plugin/wp-instagram-widget": "^2.0.3",
    "wpackagist-plugin/wp-embed-facebook": "^2.2.3",
    "portal-ifc-2017/tema": "dev-master",
    "portal-ifc-2017/tema-noticias": "dev-master",
    "portal-ifc-2017/tema-campi": "dev-master",
    "portal-ifc-2017/tema-cursos": "dev-master",
    "portal-ifc-2017/tema-departamentos": "dev-master",
    "portal-ifc-2017/ifc-funcionalidade": "dev-master"
  },
  "require-dev": {
    "wpackagist-plugin/fakerpress": "^0.4.9",
    "squizlabs/php_codesniffer": "^3.0.2"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin",
        "stuttter/wp-multi-network",
        "wpackagist-plugin/wp-instagram-widget",
        "wpackagist-plugin/wp-embed-facebook"
      ],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/ifc-v2/": ["portal-ifc-2017/tema"],
      "web/app/themes/noticias-v2/": ["portal-ifc-2017/tema-noticias"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
